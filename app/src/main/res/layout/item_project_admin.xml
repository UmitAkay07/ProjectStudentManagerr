<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="12dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView android:id="@+id/tvName" android:textStyle="bold"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:id="@+id/tvInfo"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal" android:layout_marginTop="8dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnApplicants"
            android:text="Başvurular"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <Space android:layout_width="12dp" android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnEdit"
            android:text="Düzenle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <Space android:layout_width="12dp" android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnDelete"
            android:text="Sil"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
