<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:padding="24dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <EditText android:id="@+id/etFullName" android:hint="Ad Soyad"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etStudentNo" android:hint="Okul Numarası"
            android:inputType="number" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etTechs" android:hint="Bildiği Teknolojiler (virgülle)"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etEmail" android:hint="Email"
            android:inputType="textEmailAddress" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etPassword" android:hint="Şifre"
            android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etPassword2" android:hint="Şifre (Tekrar)"
            android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <Button android:id="@+id/btnDoRegister" android:text="Kayıt Ol"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <TextView android:id="@+id/tvGoLogin" android:text="Hesabın var mı? Giriş yap"
            android:paddingTop="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
