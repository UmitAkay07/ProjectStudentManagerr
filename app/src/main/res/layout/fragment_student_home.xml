<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:gravity="center"
    android:padding="24dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvWelcome"
        android:textSize="18sp"
        android:text="Hoş geldin!"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnGoProjects"
        android:text="Projeleri Gör"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnMyApplications"
        android:text="Başvurularım"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>
    <Button
        android:id="@+id/btnLogout"
        android:text="Çıkış Yap"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnProfile"
        android:text="Profilim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>







</LinearLayout>
